{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "prettier": [
      true,
      "./.prettierrc",
      {
        "editorconfig": false
      }
    ],
    "eofline": false,
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "ordered-imports": [
      false
    ],
    "max-line-length": [
      true,
      120
    ],
    "member-ordering": [
      false
    ],
    "curly": false,
    "interface-name": [
      false
    ],
    "array-type": [
      false
    ],
    "member-access": [
      false
    ],
    "no-empty-interface": false,
    "no-empty": false,
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "no-unused-expression": false,
    "max-classes-per-file": [
      false,
      1
    ],
    "variable-name": [
      false
    ],
    "one-line": [
      false
    ],
    "one-variable-per-declaration": [
      false
    ],
    "no-shadowed-variable": false,
    "semicolon": false,
    "no-string-literal": false,
    "no-console": false,
    "trailing-comma": false,
    "no-string-throw": false,
    "object-literal-key-quotes": [
      false
    ]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "src/typeDefs/index.schema.ts"
    ]
  }
}